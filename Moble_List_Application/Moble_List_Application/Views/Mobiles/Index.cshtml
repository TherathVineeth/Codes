@model List<Mobile_List>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-black text-uppercase"> <h3>Mobile List</h3></div>
        <div  class="col-md-6 text-end">

            <a asp-controller="Mobiles" asp-action="Create" class="btn btn-primary">Create</a>
        </div>
     </div>
     <hr />

    @if(Model.Count > 0)
    {

        <div  class="container-md-13  w-100 h-100">
            @foreach(var items in Model)
            {
              <div class="container-fluid">
                    <h5>@items.Mobile_name</h5>
                    <h5>@items.Mobile_Brand</h5>
                    <p>@items.Mobile_description</p>
                   <img src="@items.Mobile_logo" alt="Mobile images" />
                    <div class="d-flex align-items-center justify-content-center">
                          <a asp-controller="Mobiles" asp-action="Edit" asp-route-id="@items.id" class="btn btn-warning"> Edit </a>
                      <br>  <a asp-controller="Mobiles" asp-action="Delete" asp-route-id="@items.id" class="btn btn-danger"> Delete </a>

                        </div>
                   
                </div>
            }
        </div>
